<% provide(:title, "Signup") %>
<%= render 'layouts/header'%>
<div class="card my-3 text-center">
  <div class="card-body px-5">
    <%= form_with model: @user, local: true do |f| %>
      <div class="md-form mb-3">
        <%= f.text_field :name, class: 'form-control', placeholder: 'Name'%>
      </div>
      <div class="md-form mb-3">
        <%= f.password_field :password, class: 'form-control', placeholder: 'Password (Minimum 6 characters)' %>
      </div>
      <div class="custom-file mb-3">
        <%= f.file_field :avatar, class: 'custom-file-input', direct_upload: true, accept: "image/jpeg, image/gif, image/png" %>
        <%= f.label :avatar, class: 'custom-file-label' %>
      </div>
      <%= f.submit 'Signup', class: 'btn btn-primary p-3' %>
    <% end %>
  </div>
</div>
